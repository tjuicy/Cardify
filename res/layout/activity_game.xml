<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootGameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    android:background="@drawable/background_tiled"
    tools:context=".Game" >

    <View
        android:id="@+id/right"
        android:layout_width="0dp"
        android:layout_height="0dp" 
        android:layout_centerHorizontal="true" />
    
    <View 
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"/>
    
    <LinearLayout 
        android:id="@+id/gameMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/right"
        android:layout_alignBottom="@id/bottom"
        android:orientation="horizontal" >
        
        <TextView
         android:id="@+id/messageStream"
         android:scrollbars="vertical"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="10dp"
         android:layout_weight="0.6"
          />
        
        <View 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.4"/>
        
    </LinearLayout>
    
     

</RelativeLayout>